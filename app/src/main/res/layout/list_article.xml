<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >
    <LinearLayout
        style="@style/ArticleActivity.CardView"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/article_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="ABCDEFGHIIJJJ"/>
            <TextView
                android:id="@+id/article_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="发表于 2016/1/29 10:42:11"/>
        </LinearLayout>


        <WebView
            style="@style/WebView.Background"
            android:layout_gravity="bottom"
            android:id="@+id/article_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="bottom"
            android:id="@+id/article_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdlkfkgjlkasjdlkqwieoqkslakjdiqlkwejaid" />

    </LinearLayout>
</FrameLayout>
