<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.veyxstudio.shulehu">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Advertisement required permissions -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".InitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".DiscoverActivity"
            android:label="@string/activity_card"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ArticleActivity"
            android:screenOrientation="portrait"
            android:label="@string/article"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ArticleListActivity"
            android:screenOrientation="portrait"
            android:label="@string/article_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TagArticleListActivity"
            android:screenOrientation="portrait"
            android:label="@string/article_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SearchActivity"
            android:label="@string/search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EditActivity"
            android:label="@string/search"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name= "cn.domob.android.ads.DmActivity"
        android:theme= "@android:style/Theme.Translucent" />

    </application>

</manifest>
